<div class="row">
    <section class="main col-md-9">
        {{#if this.data.product}}
            <article>
                <h2>{{this.data.product.title}}</h2>
                {{#if this.data.product.featureImage}}
                    <img src="{{this.data.product.featureImage}}" alt="feature Image" style="width:100%" />
                {{else}}
                    <img src="https://dummyimage.com/847x320/d9d9d9/545454.jpg" alt="feature Image" style="width:100%" />
                {{/if}}
                <br /><br />
                {{this.data.product.body}}
                <br /><br />
                <strong>Category:</strong> {{this.data.product.category}}<br />
                <strong>Last Updated:</strong> {{#formatDate this.data.product.postDate}}{{/formatDate}}
            </article>
        {{else}}
            <div class="col-md-12 text-center">
                <h2>{{this.data.message}}</h2>
                <p>product / Category not available!</p>
            </div>
        {{/if}}
    </section>
    <aside class="col-md-3">
        <br /><br />
        {{#if this.data.Products}}
            <h4>Products</h4>
            <ul class="list-group">
                {{#each data.Products}}
                <a href="/product/{{this.id}}?category={{this.category}}" class="list-group-item">{{this.title}}</a>
                {{/each}}
            </ul>
        {{/if}}
        {{#if this.data.categories}}
            <h4>Categories</h4>
            <ul class="list-group">
                {{#each data.categories}}
                <a href="/product?category={{this.id}}" class="list-group-item">{{this.category}}</a>
                {{/each}}
            </ul>
        {{/if}}
    </aside>
</div>